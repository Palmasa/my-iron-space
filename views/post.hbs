<section id="post">
	<h3><span>{{title}}</span>, by <span class="post__author">{{author}}</span></h3>
	<p>{{description}}</p>
	<img class="post__detail__image" src="{{image}}" alt="Post image">
	<div class="post__tags">
		{{#each tags as |tag|}}
		<p class="post__tag">{{tag}}</p>
		{{/each}}
	</div>
</section>